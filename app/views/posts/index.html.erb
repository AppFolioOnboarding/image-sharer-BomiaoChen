<h1 class = 'js-title'><%= @title %></h1>
<div><%= link_to 'New Image', new_post_path %></div>
<div><%= link_to 'All Images', posts_path %></div>
<% @posts.each do |post| %>
  <div>
    <%= image_tag(post.link, alt: "User Image", width: 400)%>
    <div>
      <span class = 'js-tag'>Tags: </span>
      <% post.tag_list.each do |tag| %>
        <%= link_to tag, posts_path(tag: tag) %>
      <% end %>
    </div>
    <div>
      <%= link_to 'delete', post, method: :delete, data: { confirm: 'You Sure?' } %>
    </div>
  </div>
<% end %>
